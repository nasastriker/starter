body
	font-family 'Montserrat', sans-serif
	font-weight normal
	font-size: 14px
.btn-main
	border-radius: 5px
	background-clip: padding-box
	background: linear-gradient(to bottom, #ff8100 0%,#ffb245 100%)
	color #fff
	padding 20px 30px
	text-transform: uppercase
	font-weight: 500
	margin: 10px auto 20px
	display: inline-block
	&:hover
		text-decoration: none
		color #fff
		background: linear-gradient(to bottom, #ffb245 0%, #ff8100 100%)
ul
	margin 0
	padding 0
h3
	text-align: center
header
	background: #FFF url(../img/header.jpg) no-repeat
	text-align: center
	padding 20px 0 50px
	h1
		font-size: 72px
		margin: 40px 0 130px
	p
		font-size: 18px
		color: #3f3f3f
		max-width: 675px
		margin 0 auto 100px
		line-height: 35px
		font-weight: 500
		span
			border 2px solid #ff8100
			border-radius: 10px
			padding 0 5px

.navbar
	.navbar-brand
		padding 5px 15px 15px
		img
			display inline-block

.nets
	text-align: center
	background: #fff
	box-shadow: 0 3px 23px rgba(0,0,0,.08)
	padding 30px 0 0
	ul
		list-style: none
		li
			display inline-block
			padding 0 30px
			margin-bottom: 30px
			img
				margin-bottom 20px
			span
				display block
				color: #cacaca
				text-transform: uppercase

.scope-box
	.scope-navs
		text-align: center
		ul
			list-style: none
			li
				display inline-block
				padding 0 30px
				margin-bottom: 30px
				div
					padding 20px
					border-radius: 50%
					&.active
						background: #ff8100
				
.facts
	text-align: center
	background: #fff
	box-shadow: 0 3px 23px rgba(0,0,0,.08)
	padding 30px 0 0
	ul
		list-style: none
		li
			display inline-block
			display inline-block
			padding 0 30px
			margin-bottom: 30px
			span
				display block
.reviews
	h3
		text-align: center
	.owl-carousel
		.owl-dots
			.owl-dot
				span
					background: #33a9cd
				&.active
					span
						background: #ff8403
		.owl-nav
			display none
		.item
			img
				width auto
				float left
			p
				clear: both
footer
	background: url(../img/footer.jpg) no-repeat
	padding 20px 0 50px
	color #fff